function CheckTSOkData()
{
    if ($("#txtStartDate").val() != "") {
        try {
            jQuery.datepicker.parseDate("dd-M-yy", $("#txtStartDate").val());
        }
        catch (e) {
            showMessageBox("Please select valid start date.", "red");
            $("#txtStartDate").focus();
            return false;
        }
    }

    if ($("#txtTargetCompletionDate").val() != "") {
        try {
            jQuery.datepicker.parseDate("dd-M-yy", $("#txtTargetCompletionDate").val());
        }
        catch (e) {
            showMessageBox("Please select valid target completion date.", "red");
            $("#txtTargetCompletionDate").focus();
            return false;
        }
    }
    if ($("#txtActualStartDate").val() != "") {
        try {
            jQuery.datepicker.parseDate("dd-M-yy", $("#txtActualStartDate").val());
        }
        catch (e) {
            showMessageBox("Please select valid actual start date.", "red");
            $("#txtActualStartDate").focus();
            return false;
        }
    }

    if ($("#txtActualCompletionDate").val() != "") {
        try {
            jQuery.datepicker.parseDate("dd-M-yy", $("#txtActualCompletionDate").val());
        }
        catch (e) {
            showMessageBox("Please select valid actual completion date.", "red");
            $("#txtActualCompletionDate").focus();
            return false;
        }
    }

    if ($("#txtTitle").val() == "")
    {
        showMessageBox("Please enter TSO title.", "red");
        $("#txtTitle").focus();
        return false;
    }
    else if ($("#txtDescription").val() == "") {
        showMessageBox("Please enter description.", "red");
        $("#txtDescription").focus();
        return false;
    }
    else if ($("#ddlCoreServices").val() == "") {
        showMessageBox("Please select core services.", "red");
        $("#ddlCoreServices").focus();
        return false;
    }
    else if ($("#lblTeamLeadId").val() == "") {
        showMessageBox("Please enter Team lead's name or mail id.", "red");
        $("#txtTeamLead").focus();
        return false;
    }
    else if ($("#txtStartDate").val() == "") {
        showMessageBox("Please select start date.", "red");
        $("#txtStartDate").focus();
        return false;
    } 
    else if ($("#txtTargetCompletionDate").val() == "") {
        showMessageBox("Please select target completion date.", "red");
        $("#txtTargetCompletionDate").focus();
        return false;
    }
    else if ($.datepicker.parseDate('dd-M-yy', $("#txtTargetCompletionDate").val()) <= $.datepicker.parseDate('dd-M-yy', $("#txtStartDate").val())) {
        showMessageBox("Target completion date can not be less than or equal to start date.", "red");
        $("#txtTargetCompletionDate").focus();
        return false;
    }
    else if ($("#txtActualStartDate").val() == "") {
        showMessageBox("Please select actual start date.", "red");
        $("#txtActualStartDate").focus();
        return false;
    }
    else if ($("#txtActualCompletionDate").val() == "") {
        showMessageBox("Please select actual completion date.", "red");
        $("#txtActualCompletionDate").focus();
        return false;
    }
    else if ($.datepicker.parseDate('dd-M-yy', $("#txtActualCompletionDate").val()) <= $.datepicker.parseDate('dd-M-yy', $("#txtActualStartDate").val())) {
        showMessageBox("Actual completion date can not be less than or equal to actual start date.", "red");
        $("#txtActualCompletionDate").focus();
        return false;
    }
    else if ($.datepicker.parseDate('dd-M-yy', $("#TSRStartDate").val()) > $.datepicker.parseDate('dd-M-yy', $("#txtStartDate").val())) {
        showMessageBox("TSO start date can not be less than TSR start date.", "red");
        $("#txtStartDate").focus();
        return false;
    }

    else if ($("#txtEstimatedEffort").val() == "") {
        showMessageBox("Please enter estimated efforts.", "red");
        $("#txtEstimatedEffort").focus();
        return false;
    }
    else if ($("#txtPlannedEffort").val() == "") {
        showMessageBox("Please enter planned efforts.", "red");
        $("#txtPlannedEffort").focus();
        return false;
    }
    else if ($("#ddlOperationalrisk").val() == "") {
        showMessageBox("Please select operational risk.", "red");
        $("#ddlOperationalrisk").focus();
        return false;
    }
    else if ($("#ddlRelevantRepositories").val() == "") {
        showMessageBox("Please select relevant repositories.", "red");
        $("#ddlRelevantRepositories").focus();
        return false;
    }
    else if ($("#listServiceDeliveryChainSelected").val() == "") {
        showMessageBox("Please select service delivery chain.", "red");
        $("#listServiceDeliveryChainSelected").focus();
        return false;
    }
    else
    {
        return true;
    }
}


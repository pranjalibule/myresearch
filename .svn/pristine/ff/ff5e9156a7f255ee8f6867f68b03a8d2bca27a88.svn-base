function getMultiData(controlID) {
	var valArray = [];
	$("[id^='" + controlID + "']").each(function () {
		var $this = $(this);
		var typeOfControl = $this.prop('type');
		if (typeOfControl == 'text' || typeOfControl == 'textarea') {
			var valu = $this[0].value;
			valArray.push(valu);
		}
		else if (typeOfControl == 'select-one') {
			var valu = $this.val();
			valArray.push(valu);
		}
	});
	return valArray;
}